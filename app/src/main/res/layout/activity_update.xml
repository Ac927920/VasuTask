<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:layout_margin="20dp"
    android:gravity="center">

    <EditText
        android:id="@+id/fullName_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:background="@drawable/edit_text_background"
        android:layout_marginBottom="10dp"
        android:hint="Full Name"/>

    <EditText
        android:id="@+id/email_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textSize="20sp"
        android:background="@drawable/edit_text_background"
        android:layout_below="@id/fullName_up"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/password_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="20sp"
        android:background="@drawable/edit_text_background"
        android:layout_below="@id/email_up"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/confirmPassword_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Confirm Password"
        android:textSize="20sp"
        android:background="@drawable/edit_text_background"
        android:layout_below="@id/password_up"
        android:layout_marginBottom="10dp"/>

    <RadioGroup
        android:id="@+id/gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/confirmPassword_up"
        android:background="@drawable/edit_text_background"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:textSize="20sp"
            android:text="Gender"/>

        <RadioButton
            android:id="@+id/male_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"/>

        <RadioButton
            android:id="@+id/female_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            />
    </RadioGroup>

    <EditText
        android:id="@+id/dob_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date of Birth"
        android:layout_below="@id/gender"
        android:background="@drawable/edit_text_background"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/update_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_c"
        android:layout_below="@id/dob_up"/>


</RelativeLayout>
